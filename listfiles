from pathlib import Path
import pandas as pd

folder = Path("/path/to/folder")

rows = []

for f in folder.rglob("*"):
    if f.is_file():
        rows.append({
            "file_path": str(f),
            "file_name": f.name,
            "file_size": f.stat().st_size
        })

df = pd.DataFrame(rows)
print(df)
